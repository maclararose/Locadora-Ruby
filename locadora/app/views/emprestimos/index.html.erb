<p id="notice"><%= notice %></p>

<h1>Emprestimos</h1>

<table>
  <thead>
    <tr>
      <th>Locatario</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Data checkin</th>
      <th>Data checkout</th>
      <th>Limite km</th>
      <th>Meio pagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emprestimos.each do |emprestimo| %>
      <tr>
        <td><%= emprestimo.locatario.nome %></td>
        <td><%= emprestimo.carro.marca %></td>
        <td><%= emprestimo.carro.modelo %></td>
        <td><%= emprestimo.data_checkin.to_s %></td>
        <td><%= emprestimo.data_checkout.to_s %></td>
        <td><%= emprestimo.limite_km %></td>
        <td><%= emprestimo.meio_pagamento %></td>
        <td><%= link_to 'Show', emprestimo %></td>
        <td><%= link_to 'Edit', edit_emprestimo_path(emprestimo) %></td>
        <td><%= link_to 'Destroy', emprestimo, method: :delete, data: { confirm: 'Tem certeza que quer apagar os dados?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

